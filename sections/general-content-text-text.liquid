{%- style -%}
  .section-{{ section.id }} .general-content-inner{
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }} .general-content-inner{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="general-content-container section-{{ section.id }} ">
  <div class="general-content-inner">
    {% if section.settings.heading != blank %}
    <div class="general-2-col-layout">
      <h3 class="general-content-text-header">{{ section.settings.heading }}</h3>
    </div>
    {% endif  %}
    <div class="general-2-col-layout">
      {% for block in section.blocks %}
        <div class="general-text-container" style="background-color: {{ block.settings.left_background_color }}">
  			  {{ block.settings.left-text}}
        </div>
        <div class="general-text-container" style="background-color: {{ block.settings.right_background_color }}">
  			  {{ block.settings.right-text}}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "General Text and Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "limit": 1,
      "name": "t:sections.rich-text.blocks.text.name",
      "settings": [
        {
          "type": "richtext",
          "id": "left-text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "Left Text"
        },
        {
          "type": "color",
          "id": "left_background_color",
          "label": "Left Background Color"
        },
		    {
          "type": "richtext",
          "id": "right-text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "Right Text"
        },
        {
          "type": "color",
          "id": "right_background_color",
          "label": "Right Background Color"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "General Text and Text",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
